{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--output-dir",
        "C:\\Users\\npark\\OneDrive\\Documents\\playwright\\screenshots",
        "--extension"
      ]
    },
    "shortcut": {
      "command": "npx",
      "args": ["-y", "@shortcut/mcp@latest"],
      "env": {
        "SHORTCUT_API_TOKEN": "YOUR_API_TOKEN",
        "SHORTCUT_TOOLS": "stories-get-by-id,stories-search,stories-get-branch-name"
      }
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"]
    }
  }
}
